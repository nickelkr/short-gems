<% @films.each do |film| %>
  <div class="row">
    <div class="col-12">
      <h5><%= film.title %></h5>
      <h6 class="text-muted"><%= film.runtime %> minutes</h6>
      <div class="row">
        <div class="col-8">
          <iframe width="560"
            height="315"
            frameborder="0"
            allow="autoplay; encrypted-media"
            allowfullscreen
            src="https://www.youtube.com/embed/<%= film.external_id %>">
          </iframe>
        </div>
        <div class="col-4">
          <% Applause.categories.keys.each do |category| %>
            <div class="row with-padding">
              <div class="col-2">
                <button class="btn btn-outline-primary btn-round">+</button>
              </div>
              <div class="col-10 category-vote-label"><%= category.upcase %></div>
            </div>
          <% end %>
        </div>
      </div>
      <% if current_user && (film.user_id == current_user.id || current_user.roles.admin?) %>
        <br />
        <%= link_to 'Remove film', film_path(film.id), { method: :delete, id: "remove-#{film.id}" } %>
      <% end %>
    </div>
    <!--
    <div style="width: 100%; height: 20px; border-bottom: 1px solid black;">
      <span style="font-size: 15px; background-color: #F3F5F6; padding-right: 5px;">
        Film
      </span>
    </div>
    -->
  </div>
  <br />
  <br />
  <br />
<% end %>
